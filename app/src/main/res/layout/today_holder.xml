<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/quarter"
    android:layout_marginRight="@dimen/half"
    android:layout_marginLeft="@dimen/half"
    android:layout_marginTop="@dimen/quarter"
    android:layout_marginBottom="@dimen/small"
    app:cardCornerRadius="@dimen/half"
    >


<LinearLayout
    android:orientation="horizontal"
   android:layout_height="wrap_content"
    android:padding="@dimen/half"
    android:layout_margin="@dimen/quarter"
    android:layout_width="match_parent">

    <TextView
        android:layout_width="48dp"
        android:paddingTop="@dimen/quarter"
        android:paddingBottom="@dimen/quarter"
        android:id="@+id/schedule_time"
        android:text="2AM"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingTop="@dimen/quarter"
        android:paddingBottom="@dimen/quarter"
        android:id="@+id/schedule_title"
        android:text="Lecture"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="54dp"
        android:paddingTop="@dimen/quarter"
        android:paddingBottom="@dimen/quarter"
        android:id="@+id/count_down"
        android:text="00:00:00"
        android:layout_height="wrap_content" />


</LinearLayout>
</android.support.v7.widget.CardView>
